@model InitPasswordResetViewModel
@{
    Layout = "_Layout";
    ViewData.SetActivePage(AdminNavPages.Users, "Initiate Password Reset - " + Model.Email);
}

<h2 class="mt-1 mb-4">@ViewData["Title"]</h2>
<div class="row">
    <div class="col-xl-8 col-xxl-constrain">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="form-label" data-required></label>
                <input asp-for="Email" class="form-control" placeholder="Email of User to Reset" required/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <input type="submit" class="btn btn-primary" id="Submit" value="Submit"/>
            </div>

            @if (!string.IsNullOrEmpty(Model.PasswordResetToken))
            {
                <div class="form-group">
                    <label class="form-label">Password Reset Token:</label>
                    <div>
                        <b style="word-break: break-all; display: block;">@Model.PasswordResetToken</b>
                    </div>
                </div>
            }

        </form>
    </div>
</div>
