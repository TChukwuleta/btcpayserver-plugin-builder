@model PluginBuilder.ViewModels.PluginSettingViewModel
@{
	Layout = "_Layout";
	ViewData.SetActivePage(PluginNavPages.Settings, "Plugin settings");
}

@section HeaderScripts {
    <style>
        #drop-area {
            transition: background-color 0.3s ease;
            position: relative;
        }

        #fileInput {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            opacity: 0;
            cursor: pointer;
        }

        .file-preview {
            display: flex;
            justify-content: space-between;
            align-items: center;
            border: 1px solid #dee2e6;
            padding: 0.75rem;
            border-radius: 0.25rem;
        }

            .file-preview .file-name {
                flex: 1;
            }

            .file-preview .delete-icon {
                cursor: pointer;
                color: red;
                margin-left: 1rem;
            }
    </style>
    
    <script src="~/scripts/imageupload-utils.js" asp-append-version="true"></script>
} 

<h2 class="mt-1 mb-4">@ViewData["Title"]</h2>
<div class="row">
    <div class="col-xl-8 col-xxl-constrain">
        <form asp-action="Settings" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="card mb-4" style="width: 150px; height: 150px;">
                <div class="card-body text-center d-flex align-items-center justify-content-center">
                    @{
                        var logoUrl = !string.IsNullOrEmpty(Model.Logo) ? Model.Logo : Url.Content("~/img/icon-512x512.png");
                    }
                    <img asp-for="Logo" src="@logoUrl" class="rounded-4 img-fluid" style="max-width: 100%; max-height: 100%; object-fit: contain;">
                    <input type="hidden" asp-for="Logo" value="@Model.Logo" />
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="form-label"></label>
                <input asp-for="Description" class="form-control" placeholder="my-awesome-plugin" />
                <div class="form-text">Recommended length: between 50 and 150 characters</div>
            </div>

            <div class="form-group">
                <label asp-for="Documentation" class="form-label"></label>
                <input asp-for="Documentation" class="form-control" placeholder="https://docs.btcpayserver.org/PodServer/" />
                <span asp-validation-for="Documentation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GitRepository" class="form-label"></label>
                <input asp-for="GitRepository" class="form-control" placeholder="https://github.com/Kukks/btcpayserver" required />
                <span asp-validation-for="GitRepository" class="text-danger"></span>
            </div>
			<div class="form-group">
                <label asp-for="GitRef" class="form-label"></label>
                <input asp-for="GitRef" class="form-control" placeholder="plugins/collection" />
                <span asp-validation-for="GitRef" class="text-danger"></span>
            </div>
			<div class="form-group">
                <label asp-for="PluginDirectory" class="form-label"></label>
                <input asp-for="PluginDirectory" class="form-control" placeholder="Plugins/BTCPayServer.Plugins.RockstarStylist" />
                <span asp-validation-for="PluginDirectory" class="text-danger"></span>
            </div>
			<div class="form-group">
                <label asp-for="BuildConfig" class="form-label"></label>
                <input asp-for="BuildConfig" class="form-control" placeholder="Release" />
                <span asp-validation-for="BuildConfig" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PluginLogo" class="form-label"></label>
                <div id="drop-area" class="form-control rounded p-4 text-center">
                    <p class="mb-0">Drag and drop file or <span class="text-primary">browse file</span></p>
                    <input asp-for="PluginLogo" type="file" class="custom-file-input" id="fileInput" name="PluginLogo" accept="image/*">
                    <div class="form-text">If empty a placeholder would be used in the plugin marketplace.</div>
                </div>
                <div id="preview" class="mt-4"></div>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Update" class="btn btn-primary" id="Update" />
            </div>
        </form>
    </div>
</div>
